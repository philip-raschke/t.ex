{
  "manifest_version": 2,
  "name": "T.EX - Transparency EXtension",
  "description": "This extension shows all the data in a request.",
  "version": "1.0",
  "background": {
    "scripts": [
      "sjcl/sjcl.js",
      "jsencrypt/jsencrypt.min.js",
      "background/background.js"
    ]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "T.EX - Transparency EXtension",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "activeTab",
    "background",
    "storage",
    "unlimitedStorage",
    "tabs",
    "sessions",
    "webNavigation",
    "webRequest",
    "<all_urls>",
    "webRequestBlocking"
  ]
}
